<div class="tab-pane fade show" id="show-activity" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <a href="/admin/booking" class="btn btn-danger my-3">Back</a>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <img src="/<%= booking.payments.proofPayment %>" alt="image" style="width: 100%">
          <div class="row" style="gap: 5px;">
            <% if (booking.payments.status=='Proses' ) { %>
              <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="POST">
                <button type="submit" class="btn btn-danger">
                  <i class="fas fa-times"> Reject</i>
                </button>
              </form>
              <form action="/admin/booking/<%= booking.id %>/confirm?_method=PUT" method="POST">
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-check"> Confirm</i>
                </button>
              </form>
              <% } %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Name Member</th>
                  <th>Total</th>
                  <th>Bank</th>
                  <th>Title</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <%= booking.memberId.firstName %>
                      <%= booking.memberId.lastName %>
                  </td>
                  <td>$ <%= booking.total %>
                  </td>
                  <td>
                    <%= booking.payments.bankFrom %>
                  </td>
                  <td>
                    <%= booking.itemId.title %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>