<!-- Modal -->
<div class="modal fade" id="editModalFeature" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Feature</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/item/edit/feature?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="nameFeatureUpdate">Name</label>
            <input type="text" class="form-control" id="nameFeatureUpdate" name="name" placeholder="Enter name"
              required>
          </div>
          <div class="form-group">
            <label for="qtyFeatureUpdate">QTY</label>
            <input type="number" class="form-control" id="qtyFeatureUpdate" name="qty" placeholder="Enter qty" required>
          </div>
          <div class="form-group">
            <label for="imageFeatureUpdate">Image</label>
            <input type="file" class="form-control" id="imageFeatureUpdate" name="image">
          </div>
          <input type="hidden" name="id" id="itemIdFeatureUpdate">
          <input type="hidden" value="<%= itemId %>" name="itemId">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save changes</button>
      </form>
    </div>
  </div>
</div>
</div>