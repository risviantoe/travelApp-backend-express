<div class="tab-pane fade active" id="show-activity" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input type="text" class="form-control" id="type" name="type" placeholder="Enter type" required>
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" id="image" name="image" required>
            </div>
            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="isPopular" name="isPopular" value="true">
                <label class="form-check-label" for="isPopular"> Popular </label>
              </div>
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId">
            <button type="submit" class="btn btn-primary">Save changes</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Is Popular</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < activity.length; i++){ %>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <%= activity[i].name %>
                    </td>
                    <td>
                      <%= activity[i].type %>
                    </td>
                    <td>
                      <img src="/<%= activity[i].imageUrl %>" alt="<%= activity[i].name %>" height="30px">
                    </td>
                    <td align="center">
                      <% if (activity[i].isPopular) { %>
                        <i class="fas fa-check-circle" style="color: teal;"></i>
                      <% } else { %>
                        <i class="fas fa-times-circle" style="color: red;"></i>
                      <% } %>
                    </td>
                    <td>
                      <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>" data-ispopular="<%= activity[i].isPopular %>"> 
                        <i class="fas fa-edit"></i>
                      </a>
                      <button type="button" class="btn btn-danger btn-circle btn-sm button-delete" data-toggle="modal"
                        data-target="#deleteModalActivity" data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>