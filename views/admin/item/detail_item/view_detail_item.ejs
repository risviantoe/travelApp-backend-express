  <%- include('modal_edit_feature.ejs') %>
    <%- include('modal_edit_activity.ejs') %>
      <%- include('modal_delete_feature.ejs') %>
      <%- include('modal_delete_activity.ejs') %>
        <%- include('../../../partials/js.ejs') %>
          <script>
            $(document).ready(function () {
              $('#dataTableFeature').DataTable()
            })
            $(document).ready(function () {
              $('#dataTableActivity').DataTable()
            })
          </script>
          <script>
            ClassicEditor
              .create(document.querySelector('#itemDescription'))
          </script>
          <script>
            $('#dataTableFeature').on('click', '.button-delete', function () {
              let id = $(this).data('id')
              let name = $(this).data('name')
              $('#deleteModalFeature').modal('show')
              $('#featureIdDelete').val(id)
              $('#featureNameDelete').text(name)
            })

            $('#dataTableActivity').on('click', '.button-delete', function () {
              console.log('click');
              let id = $(this).data('id')
              let name = $(this).data('name')
              $('#deleteModalActivity').modal('show')
              $('#activityIdDelete').val(id)
              $('#activityNameDelete').text(name)
            })
          </script>
          <script>
            $('#dataTableFeature').on('click', '.button-update', function () {
              let id = $(this).data('id')
              let name = $(this).data('name')
              let qty = $(this).data('qty')
              $('#editModalFeature').modal('show')
              $('#itemIdFeatureUpdate').val(id)
              $('#nameFeatureUpdate').val(name)
              $('#qtyFeatureUpdate').val(qty)
            })

            $('#dataTableActivity').on('click', '.button-update', function () {
              let id = $(this).data('id')
              let name = $(this).data('name')
              let type = $(this).data('type')
              let isPopular = $(this).data('ispopular')
              $('#editModalActivity').modal('show')
              $('#itemIdActivityUpdate').val(id)
              $('#nameActivityUpdate').val(name)
              $('#typeActivityUpdate').val(type)
              $('#isPopularActivityUpdate').prop('checked', isPopular)
            })
          </script>