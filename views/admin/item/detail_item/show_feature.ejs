<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter bank name" required>
            </div>
            <div class="form-group">
              <label for="qty">QTY</label>
              <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter nomor rekening" required>
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" id="image" name="image" required>
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId">
            <button type="submit" class="btn btn-primary">Save changes</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableFeature" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < feature.length; i++){ %>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <%= feature[i].name %>
                    </td>
                    <td>
                      <%= feature[i].qty %>
                    </td>
                    <td>
                      <img src="/<%= feature[i].imageUrl %>" alt="<%= feature[i].name %>" height="30px">
                    </td>
                    <td>
                      <form action="/admin/item/<%= itemId %>/feature/<%=feature[i].id %>">
                        <a href="javascript:void()" type="button"
                          class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= feature[i].id %>"
                          data-name="<%= feature[i].name %>" data-qty="<%= feature[i].qty %>">
                          <i class="fas fa-edit"></i>
                        </a>
                        <button type="button" class="btn btn-danger btn-circle btn-sm button-delete" data-toggle="modal"
                          data-target="#deleteModal" data-id="<%= feature[i].id %>" data-name="<%= feature[i].name %>">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>