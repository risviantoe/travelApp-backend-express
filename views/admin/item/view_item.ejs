<%- include('../../partials/header.ejs') %>
  <div id="wrapper">
    <%- include('../../partials/sidebar.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../../partials/navbar.ejs') %>
            <div class="container-fluid">
              <%- include('../../partials/message.ejs') %>
                <h1 class="h3 mb-4 text-gray-800">Item</h1>
                <% if (action==='view' ) { %>
                  <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                      <button class="nav-link active" id="nav-home-tab" data-toggle="tab" data-target="#show-items"
                        type="button" role="tab" aria-controls="nav-home" aria-selected="true">Show Items</button>
                      <button class="nav-link" id="nav-profile-tab" data-toggle="tab" data-target="#add-item"
                        type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Add Item</button>
                    </div>
                  </nav>
                  <div class="tab-content" id="nav-tabContent">
                    <%- include('show_table_item.ejs') %>
                      <%- include('add_item.ejs') %>
                  </div>
                  <% } else if (action==='show image' ) { %>
                    <nav>
                      <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-home-tab" data-toggle="tab" data-target="#show-image"
                          type="button" role="tab" aria-controls="nav-home" aria-selected="true">Show Image</button>
                      </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                      <%- include('show_image_item.ejs') %>
                    </div>
                    <% } else { %>
                      <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                          <button class="nav-link active" id="nav-home-tab" data-toggle="tab" data-target="#edit-item" type="button"
                            role="tab" aria-controls="nav-home" aria-selected="true">Edit Item</button>
                        </div>
                      </nav>
                      <div class="tab-content" id="nav-tabContent">
                        <%- include('edit_item.ejs') %>
                      </div>
                    <% } %>
            </div>
        </div>
        <%- include('../../partials/footer.ejs') %>
      </div>
  </div>
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <%- include('modal_delete.ejs') %>
  <%- include('../../partials/js.ejs') %>
    <script>
      ClassicEditor
        .create(document.querySelector('#itemDescription'))
    </script>

    <script>
      $('#dataTable').on('click', '.button-delete', function () {
          let id = $(this).data('id')
          let name = $(this).data('name')
          $('#deleteModal').modal('show')
          $('#itemIdDelete').val(id)
          $('#itemNameDelete').text(name)
        })
    </script>