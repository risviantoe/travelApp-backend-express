<div class="tab-pane fade show active" id="show-items" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < item.length; i++){ %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= item[i].title %></td>
                <td>$ <%= item[i].price %></td>
                <td><%= item[i].country %></td>
                <td><%= item[i].city %></td>
                <td>
                  <a href="/admin/item/show-image/<%= item[i].id %>" type="button" class="btn btn-info btn-circle btn-sm">
                    <i class="fas fa-image"></i>
                  </a>
                  <a href="/admin/item/detail/<%= item[i].id %>" type="button" class="btn btn-success btn-circle btn-sm">
                    <i class="fas fa-plus"></i>
                  </a>
                  <a href="/admin/item/<%= item[i].id %>" type="button" class="btn btn-warning btn-circle btn-sm">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button type="button" class="btn btn-danger btn-circle btn-sm button-delete" data-toggle="modal"
                    data-target="#deleteModal" data-id="<%= item[i].id %>" data-name="<%= item[i].title %>">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>