  <script>
    $('#dataTable').on('click', '.button-update', function () {
      let id = $(this).data('id')
      let bankName = $(this).data('bankname')
      let accountNumber = $(this).data('accountnumber')
      let accountHolder = $(this).data('accountholder')
      let imageUrl = $(this).data('imageurl')
      $('#editModal').modal('show')
      $('#bankIdUpdate').val(id)
      $('#bankNameUpdate').val(bankName)
      $('#accountNumberUpdate').val(accountNumber)
      $('#accountHolderUpdate').val(accountHolder)
      $('#imageUrlUpdate').val(imageUrl)
    })

    $('#dataTable').on('click', '.button-delete', function () {
      let id = $(this).data('id')
      let name = $(this).data('bankname')
      $('#deleteModal').modal('show')
      $('#bankIdDelete').val(id)
      $('#bankNameDelete').text(name)
    })
  </script>