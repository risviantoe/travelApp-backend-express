<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Bank</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="bankNameUpdate">Name Bank</label>
            <input type="text" class="form-control" id="bankNameUpdate" name="bankName" placeholder="Enter bank name"
              required>
          </div>
          <div class="form-group">
            <label for="accountNumberUpdate">Nomor Rekening</label>
            <input type="text" class="form-control" id="accountNumberUpdate" name="accountNumber"
              placeholder="Enter nomor rekening" required>
          </div>
          <div class="form-group">
            <label for="accountHolderUpdate">Account Holder</label>
            <input type="text" class="form-control" id="accountHolderUpdate" name="accountHolder"
              placeholder="Enter account holder" required>
          </div>
          <div class="form-group">
            <label for="imageUrlUpdate">Image</label>
            <input type="file" class="form-control" id="imageUrlUpdate" name="imageUrl">
            <span>Pilih gambar untuk update</span>
          </div>
        </div>
        <input type="hidden" id="bankIdUpdate" name="bankId">
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>